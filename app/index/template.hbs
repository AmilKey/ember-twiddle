{{#each files as |file|}}
  <h2>Path: {{input value=file.name}}</h2>

  <code>
    <pre>{{ivy-codemirror
        value         = file.content
        mode          = 'javascript'
        theme         = 'solarized'
        lineNumbers   = true
    }}</pre>
  </code>
  {{#if file.errorMessage}}
    <h2>Error Message</h2>
    <code>
      <pre>{{file.errorMessage}}</pre>
    </code>
  {{else}}
    <h2>Compiled</h2>

    <code>
      <pre>{{file.compiled}}</pre>
    </code>
  {{/if}}
  <hr>
{{/each}}

<button {{action 'addFile'}}>Add file</button>
